[Unit]
Description=TLP suspend/resume
Before=sleep.target
StopWhenUnneeded=yes
Documentation=http://linrunner.de/tlp

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/usr/sbin/tlp suspend
ExecStop=/usr/sbin/tlp resume

[Install]
WantedBy=sleep.target
